<?xml version="1.0"?>
<?xml-stylesheet href="chrome://zotero-better-bibtex/skin/overlay.css" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://zotero-better-bibtex/locale/zotero-better-bibtex.dtd">

<overlay id="zotero-better-bibtex-overlay"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
  <commandset id="mainCommandSet">
    <command id="cmd_betterbibtex_mdScan" oncommand="window.openDialog('chrome://zotero-better-bibtex/content/mdScan.xul', 'mdScan', 'chrome,centerscreen')"/>
  </commandset>

	<stringbundleset id="stringbundleset">
		<stringbundle id="zotero-better-bibtex-strings"
			src="chrome://zotero-better-bibtex/locale/zotero-better-bibtex.properties"/>
	</stringbundleset>
	
	<menupopup id="zotero-tb-actions-popup">
		<menuitem insertafter="zotero-tb-actions-rtfScan" label="&zotero-better-bibtex.mdScan;" command="cmd_betterbibtex_mdScan"/>
	</menupopup>

  <menupopup id="zotero-collectionmenu">
    <menuitem label="&zotero.better-bibtex.show-collection-key;" oncommand="alert(serverURL(ZoteroPane_Local.collectionsView, '.biblatex') || '&zotero.better-bibtex.server.disabled;')"/>
	</menupopup>

  <menupopup id="zotero-itemmenu">
    <menuitem id="id-zotero-better-bibtex-set-citekey" label="&zotero.better-bibtex.citekey.set;" oncommand="Zotero.BetterBibTeX.pinCiteKeys();"/>
    <menuitem id="id-zotero-better-bibtex-clear-citekey" label="&zotero.better-bibtex.citekey.clear;" oncommand="Zotero.BetterBibTeX.clearCiteKeys();"/>
	</menupopup>

  <!-- treecols id="zotero-items-columns-header">
    <treecol insertafter="zotero-items-column-extra" id="zotero-items-column-citekey" hidden="true" label="&zotero.better-bibtex.citekey_column;" flex="1" zotero-persist="width ordinal hidden sortActive sortDirection"/>
  </treecols -->
	
	<!-- Include the main extension logic -->
	<script src="chrome://zotero/content/include.js"/>
	<script src="chrome://zotero-better-bibtex/content/include.js" type="application/javascript;version=1.8"/>
	<script src="chrome://zotero-better-bibtex/content/preferences.js" type="application/javascript;version=1.8"/>
</overlay>
